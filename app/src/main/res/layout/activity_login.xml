<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bgcolor"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/loginLinear"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="200dp"
                android:src="@drawable/logoo"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="PATIENT PORTAL"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="Dentomax International"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textStyle="italic|bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:id="@+id/layoutEnterPhone"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_below="@id/loginLinear"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:hintAnimationEnabled="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#EDE6E6"
                android:layout_marginRight="30dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxBackgroundColor="#fff"
                app:boxCornerRadiusBottomStart="10dp"
                android:padding="3dp"
                app:boxCornerRadiusTopStart="10dp"
                android:textColorHint="#B1AAAA"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_baseline_admin"
                    android:hint="Mobile Number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:lines="1"
                    android:minLines="1"
                    android:maxLength="10"
                    android:inputType="number"
                    android:id="@+id/editPatientID"
                    android:textColor="#000"
                    android:drawablePadding="6dp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/btnContinue"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:text="GET OTP"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutVerify"
            android:layout_width="match_parent"
            android:layout_below="@id/loginLinear"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <com.chaos.view.PinView
                android:id="@+id/pinViewOTP"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:cursorVisible="true"
                android:inputType="number"
                android:itemBackground="@drawable/otp_back"
                android:padding="7dp"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                app:cursorColor="#000"
                app:itemCount="6"
                app:itemHeight="40dp"
                app:itemRadius="10dp"
                app:itemSpacing="3dp"
                app:itemWidth="40dp"
                android:layout_centerHorizontal="true"
                app:viewType="rectangle" />
            <LinearLayout
               android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@id/pinViewOTP"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Didn't get the OTP?  "
                    android:layout_weight="1"
                    android:textColor="#000"
                    />
                <RelativeLayout
                    android:layout_width="81dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resend Now"
                        android:id="@+id/textResendNow"
                        android:textColor="@color/colorPrimary"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.75dp"
                        android:background="@color/colorPrimary"
                        android:layout_below="@id/textResendNow"
                        />
                </RelativeLayout>

            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="30dp"
                android:id="@+id/btnTakeMeIn"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:text="Take Me In"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>