<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgcolor"
    tools:context=".MyProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimary"
                    android:layout_height="240dp">
                    <View
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:id="@+id/patientProfilePic"
                        android:layout_width="200dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="200dp"
                        android:src="@drawable/ic_baseline_account_box_24" />
                </RelativeLayout>
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:textSize="25sp"
                    android:id="@+id/profilePatientName"
                    android:text="AYUSH SHARMA" android:textColor="@color/colorPrimary"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Patient ID : "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="ayush123"
                        android:id="@+id/profilePatientUid"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Mobile No : "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="8077919303"
                        android:id="@+id/profilePatientMob"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Address : "
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="gopal nagar amtsSA"
                        android:id="@+id/profilePatientAdd"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</FrameLayout>