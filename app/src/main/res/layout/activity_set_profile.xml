<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".SetProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/dental"
            android:adjustViewBounds="true"
            android:alpha="0.2"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/patientProfilePic"
                android:layout_width="200dp"
                android:src="@drawable/ic_baseline_account_box_24"
                android:layout_height="200dp"/>
        </RelativeLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="#fff"
            app:cardElevation="2dp"
            android:onClick="onClickAddPhoto"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/add_photo_back"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="7dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ADD PHOTO"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:hintAnimationEnabled="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#EDE6E6"
            android:layout_marginRight="30dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxBackgroundColor="#fff"
            app:boxCornerRadiusBottomStart="10dp"
            android:padding="3dp"
            app:boxCornerRadiusTopStart="10dp"
            android:textColorHint="#B1AAAA"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_baseline_admin"
                android:hint="Full Name"
                android:id="@+id/patientFullName"
                android:textColor="#000"
                android:drawablePadding="6dp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:hintAnimationEnabled="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#EDE6E6"
            android:layout_marginRight="30dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxBackgroundColor="#fff"
            app:boxCornerRadiusBottomStart="10dp"
            android:padding="3dp"
            app:boxCornerRadiusTopStart="10dp"
            android:textColorHint="#B1AAAA"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_baseline_local_phone_24"
                android:hint="Mobile Number"
                android:id="@+id/patientMobile"
                android:textColor="#000"
                android:maxLength="10"
                android:drawablePadding="6dp"
                android:inputType="number"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:hintAnimationEnabled="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#EDE6E6"
            android:layout_marginRight="30dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/colorPrimary"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxBackgroundColor="#fff"
            app:boxCornerRadiusBottomStart="10dp"
            android:padding="3dp"
            app:boxCornerRadiusTopStart="10dp"
            android:textColorHint="#B1AAAA"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:drawableStart="@drawable/ic_baseline_address"
                android:hint="Full address"
                android:textColor="#000"
                android:id="@+id/patientAddress"
                android:drawablePadding="6dp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:onClick="onClickTakeMeIn"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Take Me In"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</RelativeLayout>